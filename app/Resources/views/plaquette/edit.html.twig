{% extends '::layout_admin.html.twig' %}

{% block content %}

    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header light-green">
                            <h4 class="title">Modifier cette plaquette</h4>
                        </div>
                        <div class="card-content table-responsive">

                            {{ form_start(edit_form) }}
                            <div class="row">
                                <div class="col s12 l6">
                                    {{ form_label(edit_form.nom, 'Nom :') }}
                                    {{ form_widget(edit_form.nom) }}
                                    {{ form_errors(edit_form.nom) }}
                                </div>
                                <div class="col s12 l6">
                                    {{ form_label(edit_form.residence, 'Résidence :') }}
                                    {{ form_widget(edit_form.residence) }}
                                    {{ form_errors(edit_form.residence) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s12 l6">
                                    {% if plaquette.media.mediaName is defined %}
                                        {% if plaquette.media.typeMedia.nom == "pdf" %}
                                            <div class="imgUploader">
                                                <a href="{{ asset('uploads/'~plaquette.media.mediaName) }}">
                                                    <img class="responsive-img" src="{{ asset('uploads/pdf.jpg') }}"/>
                                                </a>
                                            </div>
                                        {% else %}
                                            <img class="responsive-img" src="{{ asset('uploads/'~plaquette.media.mediaName) }}"/>
                                            <p>{{ plaquette.media.typeMedia.nom }}</p>
                                        {% endif %}
                                        {% if asset('uploads/'~plaquette.media.mediaName) !=  asset('uploads/default.jpg') %}
                                            <a href="{{ path('plaquette_media_delete', {"id" : plaquette.id, "media_id" : plaquette.media.id}) }}">Supprimer</a>
                                            <br>
                                        {% endif %}
                                    {% endif %}
                                    <h3>Ajouter une nouvelle plaquette.</h3>
                                    <p>Utilisez le type de média "<b>pdf</b>" pour la plaquette au format pdf.</p>
                                    {{ form_widget(edit_form.media) }}
                                    {{ form_errors(edit_form.media) }}
                                </div>
                            </div>
                            <input class="waves-effect waves-light btn-large light-green" type="submit" value="Modifier"/>
                            {{ form_end(edit_form) }}

                            <ul>
                                <li>
                                    <a href="{{ path('admin_plaquette_index') }}"><i class="material-icons">keyboard_return</i>Retour
                                        à la liste des témoignages</a>
                                </li>
                                <li>
                                    {{ form_start(delete_form) }}
                                    <input type="submit" value="Supprimer"
                                           class="waves-effect waves-light btn-large red pull-right">
                                    {{ form_end(delete_form) }}
                                </li>
                            </ul>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
