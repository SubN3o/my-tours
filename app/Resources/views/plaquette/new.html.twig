{% extends '::layout_admin.html.twig' %}

{% block content %}

    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header light-green">
                            <h4 class="title"> Créer une nouvelle plaquette</h4>
                        </div>
                        <div class="card-content table-responsive">

                            {{ form_start(form) }}
                            <div class="row">
                                <div class="col s12">
                                    {{ form_label(form.nom, 'Nom :') }}
                                    {{ form_widget(form.nom) }}
                                    {{ form_errors(form.nom) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s12">
                                    <h3>Ajouter une nouvelle plaquette.</h3>
                                    <p>Utilisez le type de média "<b>pdf</b>" pour la plaquette au format pdf.</p>
                                    {{ form_widget(form.media) }}
                                    {{ form_errors(form.media) }}
                                </div>
                            </div>
                            <input class="waves-effect waves-light btn-large light-green" type="submit" value="Créer"/>
                            {{ form_end(form) }}

                            <ul>
                                <li>
                                    <a href="{{ path('admin_plaquette_index') }}"><i class="material-icons">keyboard_return</i>Retour
                                        à la liste des plaquettes</a>
                                </li>
                            </ul>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
