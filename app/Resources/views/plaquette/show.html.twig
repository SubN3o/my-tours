{% extends '::layout_admin.html.twig' %}

{% block content %}

    <div class="content">
        <div class="container-fluid">
            <div class="row">

                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header light-green">
                            <h4 class="title">Plaquette {{ plaquette.nom }}</h4>
                        </div>
                        <div class="card-content table-responsive">
                            <table class="table">
                                <tbody>
                                <tr>
                                    <th>Nom</th>
                                    <td>{{ plaquette.nom }}</td>
                                </tr>
                                <tr>
                                    <th>Lien</th>
                                    <td>{{ absolute_url(asset('uploads/'~plaquette.media.mediaName)) }}</td>
                                </tr>
                                </tbody>
                            </table>
                            <hr>
                            <div class="row">
                                    <div class="col s4">
                                        {% if plaquette.media.typeMedia.nom == "pdf" %}
                                            <div class="imgUploader">
                                                <a href="{{ asset('uploads/'~plaquette.media.mediaName) }}">
                                                    <img class="responsive-img" src="{{ asset('uploads/pdf.jpg') }}"/>
                                                </a>
                                            </div>
                                        {% else %}
                                            <img class="responsive-img" src="{{ asset('uploads/'~plaquette.media.mediaName) }}"/>
                                            <p>{{ plaquette.media.typeMedia.nom }}</p>
                                        {% endif %}
                                    </div>
                            </div>
                            <ul>
                                <li>
                                    <a href="{{ path('admin_plaquette_index') }}"><i class="material-icons">keyboard_return</i>Retour
                                        à la liste des plaquettes</a>
                                </li>
                                <li>
                                    <a href="{{ path('admin_plaquette_edit', { 'id': plaquette.id }) }}"><i
                                                class="material-icons">build</i>Éditer cette plaquette</a>
                                </li>

                                <li>
                                    {{ form_start(delete_form) }}
                                    <input type="submit" value="Supprimer"
                                           class="waves-effect waves-light btn-large red pull-right">
                                    {{ form_end(delete_form) }}
                                </li>
                            </ul>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}
