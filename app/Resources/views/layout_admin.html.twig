                                <a href="{{ path("admin_realisation_index") }}">
                                    <p>Réalisations</p>
                                </a>
                                <a href="{{ path("admin_evenement_index") }}">
                                    <p>Événements</p>
                                </a>
                                <a href="{{ path("admin_partenaire_index") }}">
                                    <p>Partenaires</p>
                                </a>
                                <a href="{{ path("admin_temoignage_index") }}">
                                    <p>Témoignages</p>
                                </a>
                            </div>
                        </li>
                        <li>
                            <div class="collapsible-header">Compétences <i class="material-icons">list</i>
                            </div>
                            <div class="collapsible-body">
                                <a href="{{ path("admin_service_index") }}">
                                    <p>Services</p>
                                </a>
                                <a href="{{ path("admin_pack_index") }}">
                                    <p>Packs</p>
                                </a>
                            </div>
                        </li>
                        <li>
                            <div class="collapsible-header">Infos Pratiques <i class="material-icons">border_color</i>
