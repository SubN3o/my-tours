                {% endblock %}

                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label }}" role="alert">
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}

                {% block content %}

                {% endblock %}
            </div>
        </div>
    {% endblock %}


        {% block javascripts %}
            {{ parent() }}
            <script type="text/javascript" src="{{ asset('assets-admin/js/material.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('assets-admin/js/material-dashboard.js') }}"></script>
            <script type="text/javascript" src="{{ asset('js/ckeditor/ckeditor.js') }}"></script>

            <script>CKEDITOR.replace(textarea)</script>

            <script type="text/javascript">
                $(document).ready(function () {
                    $('select').material_select();
                    $('.collapsible').collapsible();

                    $('#alert_close').click(function () {
                        $("#alert_box").fadeOut("slow", function () {
                        });
                    });
                });
            </script>
            <script type="text/javascript">
                $('.copy_button').on('click', function (e) {
                    e.preventDefault();
                    copyToClipboard($(this).attr('href'));
                });

                function copyToClipboard(text) {
                    var $temp = $("<input>");
                    $("body").append($temp);
                    $temp.val(text).select();
                    document.execCommand("copy");
                    $temp.remove();
                }
            </script>
        {% endblock %}