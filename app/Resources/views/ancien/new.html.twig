                                    {{ form_errors(form.surface) }}
                                </div>
                                <div class="col s4">
                                    {{ form_label(form.surfaceBalcon, 'Surface Balcon :') }}
                                    {{ form_widget(form.surfaceBalcon) }}
                                    {{ form_errors(form.surfaceBalcon) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s4">
                                    {{ form_label(form.surfaceTerrasse, 'Surface Terrasse :') }}
                                    {{ form_widget(form.surfaceTerrasse) }}
                                    {{ form_errors(form.surfaceTerrasse) }}
                                </div>
                                <div class="col s4">
