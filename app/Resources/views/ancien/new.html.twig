{% block content %}

    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header light-green">
                            <h4 class="title"> Créer un nouveau bien ancien</h4>
                        </div>
                        <div class="card-content table-responsive">
