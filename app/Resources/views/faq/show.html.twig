{% extends '::layout_admin.html.twig' %}

{% block content %}

    <div class="content">
        <div class="container-fluid">
            <div class="row">

                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header light-green">
                            <h4 class="title">Q/R : {{ faq.tri }}</h4>
                        </div>
                        <div class="card-content table-responsive">
                            <table class="table">
                                <tbody>
                                <tr>
                                    <th>Tri</th>
                                    <td>{{ faq.tri }}</td>
                                </tr>
                                <tr>
                                    <th>Question</th>
                                    <td>{{ faq.question }}</td>
                                </tr>
                                <tr>
                                    <th>Réponse</th>
                                    <td>{{ faq.reponse }}</td>
                                </tr>
                                </tbody>
                            </table>
                            <hr>
                            <ul>
                                <li>
                                    <a href="{{ path('admin_faq_index') }}"><i class="material-icons">keyboard_return</i>Retour à la liste des Q/R</a>
                                </li>
                                <li>
                                    <a href="{{ path('admin_faq_edit', { 'id': faq.id }) }}"><i
                                                class="material-icons">build</i>Éditer cette Q/R</a>
                                </li>

                                <li>
                                    {{ form_start(delete_form) }}
                                    <input type="submit" value="Supprimer" class="waves-effect waves-light btn-large red pull-right">
                                    {{ form_end(delete_form) }}
                                </li>
                            </ul>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
