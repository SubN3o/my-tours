{% extends '::layout_admin.html.twig' %}

{% block content %}

    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header light-green">
                            <h4 class="title"> Ajouter une nouvelle Q/R</h4>
                        </div>
                        <div class="card-content table-responsive">

                            {{ form_start(form) }}
                            <div class="row">
                                <div class="col s1">
                                    {{ form_label(form.tri, 'Tri :') }}
                                    {{ form_widget(form.tri) }}
                                    {{ form_errors(form.tri) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s12">
                                    {{ form_label(form.question, 'Question :') }}
                                    {{ form_widget(form.question) }}
                                    {{ form_errors(form.question) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s12">
                                    {{ form_label(form.reponse, 'Réponse :') }}
                                    {{ form_widget(form.reponse) }}
                                    {{ form_errors(form.reponse) }}
                                </div>
                            </div>
                            <input class="waves-effect waves-light btn-large light-green" type="submit" value="Créer"/>
                            {{ form_end(form) }}

                            <ul>
                                <li>
                                    <a href="{{ path('admin_faq_index') }}"><i class="material-icons">keyboard_return</i>Retour à la liste des Q/R</a>
                                </li>
                            </ul>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}