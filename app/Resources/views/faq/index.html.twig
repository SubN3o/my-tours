{% extends '::layout_admin.html.twig' %}

{% block content %}
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header light-green">
                            <h4 class="title">Liste des Q/R pour la page Faq</h4>
                        </div>
                        <div class="card-content table-responsive">
                            <table class="table">
                                <thead>
                                <tr>
                                    <th>Tri</th>
                                    <th>Question</th>
                                    <th>RÃ©ponse</th>
                                </tr>
                                </thead>
                                <tbody>

                                {% for faq in faqs %}

                                    <tr>
                                        <td>{{ faq.tri }}</td>
                                        <td>{{ faq.question }}</td>
                                        <td>{{ faq.reponse }}</td>
                                        <td>
                                            <a href="{{ path('admin_faq_show', { 'id': faq.id }) }}"><i
                                                        class="material-icons">remove_red_eye</i></a>
                                        </td>
                                        <td>
                                            <a href="{{ path('admin_faq_edit', { 'id': faq.id }) }}"><i
                                                        class="material-icons">build</i></a>
                                        </td>
                                    </tr>

                                {% endfor %}

                                </tbody>
                            </table>
                            <hr>
                            <div class="navigation center">
                                {{ knp_pagination_render(faqs, 'MyOrleansBundle::pagination.html.twig') }}
                            </div>
                            <ul>
                                <li>

                                    <a href="{{ path('admin_faq_new') }}"
                                       class="btn-floating btn-large waves-effect waves-light light-green"><i
                                                class="material-icons">add</i>Ajouter une
                                        Q/R</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

