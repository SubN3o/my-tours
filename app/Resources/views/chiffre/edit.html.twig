{% extends '::layout_admin.html.twig' %}

{% block content %}

    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header light-green">
                            <h4 class="title">Modifier cette chiffre</h4>
                        </div>
                        <div class="card-content table-responsive">

                            {{ form_start(edit_form) }}
                            <div class="row">
                                <div class="col s1">
                                    {{ form_label(edit_form.tri, 'Tri :') }}
                                    {{ form_widget(edit_form.tri) }}
                                    {{ form_errors(edit_form.tri) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s6">
                                    {{ form_label(edit_form.nom, 'Nom :') }}
                                    {{ form_widget(edit_form.nom) }}
                                    {{ form_errors(edit_form.nom) }}
                                </div>
                                <div class="col s1">
                                    {{ form_label(edit_form.valeur, 'Valeur :') }}
                                    {{ form_widget(edit_form.valeur) }}
                                    {{ form_errors(edit_form.valeur) }}
                                </div>
                            </div>
                            <input class="waves-effect waves-light btn-large light-green" type="submit" value="Modifier"/>
                            {{ form_end(edit_form) }}

                            <ul>
                                <li>
                                    <a href="{{ path('admin_chiffre_index') }}"><i class="material-icons">keyboard_return</i>Retour
                                        Ã  la liste des chiffres</a>
                                </li>
                                <li>
                                    {{ form_start(delete_form) }}
                                    <input type="submit" value="Supprimer"
                                           class="waves-effect waves-light btn-large red pull-right">
                                    {{ form_end(delete_form) }}
                                </li>
                            </ul>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}