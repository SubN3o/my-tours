{% extends '::layout_admin.html.twig' %}

{% block content %}

    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header light-green">
                            <h4 class="title"> Créer un nouveau bien pour la résidence {{ residence.nom }}</h4>
                        </div>

                        <div class="card-content table-responsive">
                            {{ form_start(form) }}
                            <div class="row">
                                <div class="col s6">
                                    {{ form_label(form.reference, "Référence du bien :") }}
                                    {{ form_widget(form.reference) }}
                                    {{ form_errors(form.reference) }}
                                </div>
                                <div class="col s6">
                                    {{ form_label(form.prix, 'Prix :') }}
                                    {{ form_widget(form.prix) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s4">
                                    {{ form_label(form.typeBien, 'Type du bien :') }}
                                    {{ form_widget(form.typeBien) }}
                                </div>
                                <div class="col s4">
                                    {{ form_label(form.typeLogement, 'Type du Logement :') }}
                                    {{ form_widget(form.typeLogement) }}
                                </div>
                                <div class="col s4">
                                    {{ form_label(form.statut, 'Statut du bien :') }}
                                    {{ form_widget(form.statut) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s4">
                                    {{ form_label(form.surface, 'Surface Habitable :') }}
                                    {{ form_widget(form.surface) }}
                                </div>
                                <div class="col s4">
                                    {{ form_label(form.surfaceSejour, 'Surface séjour :') }}
                                    {{ form_widget(form.surfaceSejour) }}
                                </div>
                                <div class="col s4">
                                    {{ form_label(form.surfaceBalcon, 'Surface Balcon :') }}
                                    {{ form_widget(form.surfaceBalcon) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s4">
                                    {{ form_label(form.surfaceTerrasse, 'Surface Terrasse :') }}
                                    {{ form_widget(form.surfaceTerrasse) }}
                                </div>
                                <div class="col s4">
                                    {{ form_label(form.surfaceJardin, 'Surface Jardin :') }}
                                    {{ form_widget(form.surfaceJardin) }}
                                </div>
                                <div class="col s4">
                                    {{ form_label(form.surfaceTerrain, 'Surface Terrain :') }}
                                    {{ form_widget(form.surfaceTerrain) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s6">
                                    {{ form_label(form.expositionSejour, 'Exposition du séjour: ') }}
                                    {{ form_widget(form.expositionSejour) }}
                                </div>
                                <div class="col s6">
                                    {{ form_label(form.stationnement, 'Stationnement: ') }}
                                    {{ form_widget(form.stationnement) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s6">
                                    {{ form_label(form.dateLivraison, 'Date de livraison :') }}
                                    {{ form_widget(form.dateLivraison) }}
                                    {{ form_errors(form.dateLivraison) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s4">
                                    {{ form_label(form.solSejour, 'Revêtements Sol Séjour :') }}
                                    {{ form_widget(form.solSejour) }}
                                </div>
                                <div class="col s4">
                                    {{ form_label(form.solSdb, 'Revêtements Sol Salle de bains :') }}
                                    {{ form_widget(form.solSdb) }}
                                </div>
                                <div class="col s4">
                                    {{ form_label(form.solChambre, 'Revêtements Sol Chambre :') }}
                                    {{ form_widget(form.solChambre) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s4">
                                    {{ form_label(form.revetementMur, 'Revêtements Muraux :') }}
                                    {{ form_widget(form.revetementMur) }}
                                </div>
                                <div class="col s4">
                                    {{ form_label(form.menuiserie, 'Menuiserie :') }}
                                    {{ form_widget(form.menuiserie) }}
                                </div>
                                <div class="col s4">
                                    {{ form_label(form.chauffage, 'Chauffage :') }}
                                    {{ form_widget(form.chauffage) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s12">
                                    <h3>Veuillez charger une nouvelle image.</h3>
                                    <p>Utilisez le type de média "<b>image</b>" pour illustrer un appartement.</p>
                                    <p>Utilisez le type de média "<b>plan</b>" pour associer un plan à un appartement.</p>
                                    {{ form_widget(form.medias) }}
                                    <a class="btn-floating btn-large waves-effect waves-light teal lighten-4"
                                       id="add-another-media"><i
                                                class="material-icons">file_upload</i></a>
                                </div>
                            </div>
                            <input class="waves-effect waves-light btn-large light-green" type="submit" value="Créer"/>
                            {{ form_widget(form._token) }}
                            {{ form_end(form) }}

                        </div>


                        <ul>
                            <li>
                                <a href="{{ path('admin_flat_index', {'id':residence.id}) }}"><i
                                            class="material-icons">keyboard_return</i>Retour à la liste des
                                    biens</a>
                            </li>

                        </ul>
                    </div>

                </div>
            </div>
        </div>
    </div>

{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        // keep track of how many email fields have been rendered
        var mediaCount = '{{ form.medias|length }}';

        jQuery(document).ready(function () {
            jQuery('#add-another-media').click(function (e) { // appbundle_products_add-product
                e.preventDefault();
                var mediaList = jQuery('#{{ form.medias.vars.id }}');

                var newWidget = mediaList.attr('data-prototype');
                newWidget = newWidget.replace(/<label class="control-label required">__name__label__<\/label>/g, '');
                newWidget = newWidget.replace(/__name__label__/g, mediaCount);
                mediaCount++;
                // create a new list element and add it to the list
                var newLi = jQuery('<li></li>').html(newWidget);
                newLi.appendTo(mediaList);
                $('select').material_select();
            });
        })
    </script>
{% endblock %}