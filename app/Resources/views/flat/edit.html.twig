                                </div>
                            </div>
                            <div class="row">
                                <div class="col s12">
                                    <h3>Les medias actuellement reliés à votre appartement</h3>
                                    <p>Utilisez le type de média "<b>image</b>" pour illustrer un appartement.
                                    </p>
                                    <p>Utilisez le type de média "<b>plan</b>" pour associer un plan à un
                                        appartement.</p>
                                    {{ form_row(edit_form.medias) }}
                                    <h3>Ajouter un nouveau média.</h3>
                                    <a class="btn-floating btn-large waves-effect waves-light teal lighten-4"
                                       id="add-another-media"><i
                                                class="material-icons">add</i></a>
                                </div>
                            </div>
                            <input class="waves-effect waves-light btn-large light-green" type="submit"
                                   value="Modifier"/>
                            {{ form_widget(edit_form._token) }}
                            {{ form_end(edit_form) }}
                            <ul>
                                <li>
                                    <a href="{{ path('admin_flat_index', {'id':flat.residence.id}) }}"><i
                                                class="material-icons">keyboard_return</i>Retour à la liste des
                                        biens</a>
                                </li>
                                <li>{{ form_start(delete_form) }}
                                    <input type="submit" value="Supprimer"
                                           class="waves-effect waves-light btn-large red pull-right">
                                    {{ form_end(delete_form) }}
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        // keep track of how many email fields have been rendered
        var mediaCount = '{{ edit_form.medias|length }}';

        jQuery(document).ready(function () {

            jQuery('#add-another-media').click(function (e) {
                e.preventDefault();
                var mediaList = jQuery('#{{ edit_form.medias.vars.id }}');

                var newWidget = mediaList.attr('data-prototype');
                newWidget = newWidget.replace(/label__/g, '');
                newWidget = newWidget.replace(/__name__/g, mediaCount);
                mediaCount++;
                // create a new list element and add it to the list
                var newLi = jQuery('<li></li>').html(newWidget);
                newLi.appendTo(mediaList);
                $('select').material_select();
            });
            var media = [
                {% for media in flat.medias if media.id != null %}
                [
                    '{{ path('flat_media_delete', {"id" : flat.id, "media_id" : media.id}) }}'
                ],
                {% endfor %}
            ];

            for (i = 0; i < media.length; i++) {
                if (media.length > 1) {
                    jQuery('#myorleansbundle_flat_medias_' + i).append('<a href="' + media[i][0] + '">Supprimer le média ' + i + '</a>');
                }
            }
        })
    </script>
{% endblock %}