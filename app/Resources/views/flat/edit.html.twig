{% extends 'layout_admin.html.twig' %}

{% block content %}

    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header light-green">
                            <h4 class="title">Modifier ce bien de la résidence {{ flat.residence.nom }} </h4>
                        </div>

                        <div class="card-content table-responsive">
                            {{ form_start(edit_form) }}
                            <div class="row">
                                <div class="col s6">
                                    {{ form_label(edit_form.reference, "Référence du bien :") }}
                                    {{ form_widget(edit_form.reference) }}
                                    {{ form_errors(edit_form.reference) }}
                                </div>
                                <div class="col s6">
                                    {{ form_label(edit_form.prix, 'Prix :') }}
                                    {{ form_widget(edit_form.prix) }}
                                    {{ form_errors(edit_form.prix) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s3">
                                    {{ form_label(edit_form.typeBien, 'Type du bien :') }}
                                    {{ form_widget(edit_form.typeBien) }}
                                    {{ form_errors(edit_form.typeBien) }}
                                </div>
                                <div class="col s3">
                                    {{ form_label(edit_form.typeLogement, 'Type du Logement :') }}
                                    {{ form_widget(edit_form.typeLogement) }}
                                    {{ form_errors(edit_form.typeLogement) }}
                                </div>
                                <div class="col s3">
                                    {{ form_label(edit_form.etage, 'Etage :') }}
                                    {{ form_widget(edit_form.etage) }}
                                    {{ form_errors(edit_form.etage) }}
                                </div>
                                <div class="col s3">
                                    {{ form_label(edit_form.statut, 'Statut du bien :') }}
                                    {{ form_widget(edit_form.statut) }}
                                    {{ form_errors(edit_form.statut) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s4">
                                    {{ form_label(edit_form.surface, 'Surface Habitable :') }}
                                    {{ form_widget(edit_form.surface) }}
                                    {{ form_errors(edit_form.surface) }}
                                </div>
                                <div class="col s4">
                                    {{ form_label(edit_form.surfaceSejour, 'Surface séjour :') }}
                                    {{ form_widget(edit_form.surfaceSejour) }}
                                    {{ form_errors(edit_form.surfaceSejour) }}
                                </div>
                                <div class="col s4">
