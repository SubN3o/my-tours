{% extends '::layout_admin.html.twig' %}

{% block content %}

    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header light-green">
                            <h4 class="title"> Créer un nouveau témoignage</h4>
                        </div>
                        <div class="card-content table-responsive">

                            {{ form_start(form) }}
                            <div class="row">
                                <div class="col s12">
                                    {{ form_label(form.theme, 'Theme : ') }}
                                    {{ form_widget(form.theme) }}
                                    {{ form_errors(form.theme) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s12">
                                    {{ form_label(form.auteur, 'Auteur : ') }}
                                    {{ form_widget(form.auteur) }}
                                    {{ form_errors(form.auteur) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s6">
                                    {{ form_label(form.date, 'Date : ') }}
                                    <div class="row">
                                        <div class="col s3">{{ form_widget(form.date.day) }}</div>
                                        <div class="col s3">{{ form_widget(form.date.month) }}</div>
                                        <div class="col s3">{{ form_widget(form.date.year) }}</div>
                                    </div>
                                    {{ form_errors(form.date) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s12">
                                    {{ form_label(form.message, 'Message : ') }}
                                    {{ form_widget(form.message, { 'attr': {'class':'areaDescription'}}) }}
                                    {{ form_errors(form.message) }}
                                </div>
                            </div>
                            <input class="waves-effect waves-light btn-large light-green" type="submit" value="Modifier"/>
                            {{ form_end(form) }}

                            <ul>
                                <li>
                                    <a href="{{ path('admin_temoignage_index') }}"><i class="material-icons">keyboard_return</i>Retour
                                        à la liste des témoignage</a>
                                </li>
                            </ul>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
