{% extends '::layout_admin.html.twig' %}
{% block content %}
    <div class="content">
        <div class="container-fluid">
            <div class="row">

                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header light-green">
                            <h4 class="title">Liste de vos clients</h4>
                        </div>
                        <div class="card-content table-responsive">
                            <table class="table">
                                <thead>
                                <tr>
                                    <th>Nom</th>
                                    <th>Email</th>
                                    <th>Telephone</th>
                                    <th>Date</th>
                                    <th>Newsletter</th>
                                    <th>Sujet</th>
                                    <th>Projet</th>
                                    <th>Budget</th>
                                    <th>Aperçu</th>
                                    <th>Éditer</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for client in clients %}
                                    <tr>
                                        <td>{{ client.nom }}</td>
                                        <td>{{ client.email }}</td>
                                        <td>{{ client.telephone }}</td>
                                        <td>{% if client.date != null %}{{ client.date|date('d/m/Y') }}{% endif %}</td>
                                        <td>{% if client.newsletter %}oui{% else %}non{% endif %}</td>
                                        <td>{{ client.sujet }}</td>
                                        <td>{{ client.projet }}</td>
                                        <td>{{ client.budget }}</td>
                                        <td>
                                            <a href="{{ path('admin_client_show', { 'id': client.id }) }}"><i
                                                        class="material-icons">remove_red_eye</i></a>
                                        </td>
                                        <td>
                                            <a href="{{ path('admin_client_edit', { 'id': client.id }) }}"><i
                                                        class="material-icons">build</i></a>
                                        </td>
                                    </tr>

                                {% endfor %}

                                </tbody>
                            </table>
                            <hr>
                            <div class="navigation center">
                                {{ knp_pagination_render(clients, 'MyToursBundle::pagination.html.twig') }}
                            </div>
                            <ul>
                                <li>

                                    <a href="{{ path('admin_client_new') }}" class="btn-floating btn-large waves-effect waves-light light-green"><i class="material-icons">add</i>Ajouter un
                                        client</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
