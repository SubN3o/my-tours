{% extends '::layout_admin.html.twig' %}

{% block content %}

    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header light-green">
                            <h4 class="title"> Editer une location</h4>
                        </div>
                        <div class="card-content table-responsive">
                            {{ form_start(edit_form) }}
                            <div class="row">
                                <div class="col s6">
                                    {{ form_label(edit_form.reference, "Référence :") }}
                                    {{ form_widget(edit_form.reference) }}
                                    {{ form_errors(edit_form.reference) }}
                                </div>
                                <div class="col s6">
                                    {{ form_label(edit_form.statut, "Statut :") }}
                                    {{ form_widget(edit_form.statut) }}
                                    {{ form_errors(edit_form.statut) }}
                                </div>

                            </div>
                            <div class="row">
                                <div class="col s6">
                                    {{ form_label(edit_form.typeBien, 'Type de bien :') }}
                                    {{ form_widget(edit_form.typeBien) }}
                                    {{ form_errors(edit_form.typeBien) }}
                                </div>
                                <div class="col s6">
                                    {{ form_label(edit_form.typeLogement, 'Type de logement :') }}
                                    {{ form_widget(edit_form.typeLogement) }}
                                    {{ form_errors(edit_form.typeLogement) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s4">
                                    {{ form_label(edit_form.surface, 'Surface Habitable :') }}
                                    {{ form_widget(edit_form.surface) }}
                                    {{ form_errors(edit_form.surface) }}
                                </div>
                                <div class="col s4">
                                    {{ form_label(edit_form.surfaceBalcon, 'Surface Balcon :') }}
                                    {{ form_widget(edit_form.surfaceBalcon) }}
                                    {{ form_errors(edit_form.surfaceBalcon) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s4">
                                    {{ form_label(edit_form.surfaceTerrasse, 'Surface Terrasse :') }}
                                    {{ form_widget(edit_form.surfaceTerrasse) }}
                                    {{ form_errors(edit_form.surfaceTerrasse) }}
                                </div>
                                <div class="col s4">
                                    {{ form_label(edit_form.surfaceJardin, 'Surface Jardin :') }}
                                    {{ form_widget(edit_form.surfaceJardin) }}
                                    {{ form_errors(edit_form.surfaceJardin) }}
                                </div>
                                <div class="col s4">
                                    {{ form_label(edit_form.surfaceTerrain, 'Surface Terrain :') }}
                                    {{ form_widget(edit_form.surfaceTerrain) }}
                                    {{ form_errors(edit_form.surfaceTerrain) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s6">
                                    {{ form_label(edit_form.stationnement, 'Stationnement: ') }}
                                    {{ form_widget(edit_form.stationnement) }}
                                    {{ form_errors(edit_form.stationnement) }}
                                </div>
                                <div class="col s6">
                                    {{ form_label(edit_form.chauffage, 'Chauffage :') }}
                                    {{ form_widget(edit_form.chauffage) }}
                                    {{ form_errors(edit_form.chauffage) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s6">
                                    {{ form_label(edit_form.ville, 'Ville :') }}
                                    {{ form_widget(edit_form.ville) }}
                                    {{ form_errors(edit_form.ville) }}
                                </div>
                            </div>
                            <div class="row">
                                {{ form_label(edit_form.description, 'Description : ') }}
                                {{ form_widget(edit_form.description) }}
                                {{ form_errors(edit_form.description) }}
                            </div>
                            <div class="row">
                                <div class="col s3">
                                    {{ form_label(edit_form.energie, 'Classe énergitique :') }}
                                    {{ form_widget(edit_form.energie) }}
                                    {{ form_errors(edit_form.energie) }}
