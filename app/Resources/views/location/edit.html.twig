                                    {{ form_widget(edit_form.ges) }}
                                    {{ form_errors(edit_form.ges) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s6">
                                    {{ form_label(edit_form.date, 'Disponibilité: ') }}
                                    <div class="row">
                                        <div class="col s3">{{ form_widget(edit_form.date.day) }}</div>
                                        <div class="col s3">{{ form_widget(edit_form.date.month) }}</div>
                                        <div class="col s3">{{ form_widget(edit_form.date.year) }}</div>
                                    </div>
                                    {{ form_errors(edit_form.date) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s4">
                                    {{ form_label(edit_form.loyer, "Loyer :") }}
                                    {{ form_widget(edit_form.loyer) }}
                                    {{ form_errors(edit_form.loyer) }}
                                </div>
                                <div class="col s4">
                                    {{ form_label(edit_form.provision, "Provision :") }}
                                    {{ form_widget(edit_form.provision) }}
                                    {{ form_errors(edit_form.provision) }}
                                </div>
                                <div class="col s4">
                                    {{ form_label(edit_form.depot, "Dépot :") }}
                                    {{ form_widget(edit_form.depot) }}
                                    {{ form_errors(edit_form.depot) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s12">
                                    <h3>Ajoutez des médias</h3>
                                    <p>Utilisez le type de média "<b>image-cover</b>" pour afficher une image en
                                        couverture d'une location</p>
                                    <p>Utilisez le type de média "<b>image</b>" pour illustrer une location</p>
                                    {{ form_row(edit_form.medias) }}
                                    <a class="btn-floating btn-large waves-effect waves-light teal lighten-4"
                                       id="add-another-media"><i
                                                class="material-icons">add</i></a>
                                </div>
                            </div>

                            <input class="waves-effect waves-light btn-large light-green" type="submit"
                                   value="Modifier"/>
                            {{ form_end(edit_form) }}

                            <ul>
                                <li>
                                    <a href="{{ path('admin_location_index') }}"><i
                                                class="material-icons">keyboard_return</i>Retour
                                        à la liste des locations</a>
                                </li>
                                <li>
                                    {{ form_start(delete_form) }}
                                    <input type="submit" value="Supprimer"
                                           class="waves-effect waves-light btn-large red pull-right">
                                    {{ form_end(delete_form) }}
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        // keep track of how many email fields have been rendered
        var mediaCount = '{{ edit_form.medias|length }}';

        jQuery(document).ready(function () {
            jQuery('#add-another-media').click(function (e) { // appbundle_products_add-product
                e.preventDefault();
                var mediaList = jQuery('#{{ edit_form.medias.vars.id }}');

                var newWidget = mediaList.attr('data-prototype');
                newWidget = newWidget.replace(/label__/g, '');
                newWidget = newWidget.replace(/__name__/g, mediaCount);
                mediaCount++;
                // create a new list element and add it to the list
                var newLi = jQuery('<li></li>').html(newWidget);
                newLi.appendTo(mediaList);
                $('select').material_select();

            });
            var media = [
                {% for media in location.medias if media.id != null %}
                [
                    '{{ path('location_media_delete', {"id" : location.id, "media_id" : media.id}) }}'
                ],
                {% endfor %}
            ];

            for (i = 0; i < media.length; i++) {
                if (media.length > 1) {
                    jQuery('#myorleansbundle_location_medias_' + i).append('<a href="' + media[i][0] + '">Supprimer le média ' + i + '</a>');
                }
            }
        });
    </script>
{% endblock %}
