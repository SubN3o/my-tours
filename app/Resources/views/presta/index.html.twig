{% extends 'base.html.twig' %}

{% block body %}
    <h1>Prestas list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Value</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for prestum in prestas %}
            <tr>
                <td><a href="{{ path('presta_show', { 'id': prestum.id }) }}">{{ prestum.id }}</a></td>
                <td>{{ prestum.value }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('presta_show', { 'id': prestum.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('presta_edit', { 'id': prestum.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('presta_new') }}">Create a new prestum</a>
        </li>
    </ul>
{% endblock %}
