{% extends '::layout_admin.html.twig' %}

{% block content %}

    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header light-green">
                            <h4 class="title">Ajouter un nouveau membre</h4>
                        </div>
                        <div class="card-content table-responsive">
                            {{ form_start(form) }}
                            <div class="row">
                                <div class="col s1">
                                    {{ form_label(form.tri, 'Tri :') }}
                                    {{ form_widget(form.tri) }}
                                    {{ form_errors(form.tri) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s12">
                                    {{ form_label(form.nom, 'Nom:') }}
                                    {{ form_widget(form.nom) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s12">
                                    {{ form_label(form.prenom, 'Prénom:') }}
                                    {{ form_widget(form.prenom) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s12">
                                    {{ form_label(form.fonction, 'Fonction:') }}
                                    {{ form_widget(form.fonction) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s12">
                                    {{ form_label(form.bio, 'Biographie:') }}
                                    {{ form_widget(form.bio) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s12">
                                    {{ form_label(form.lienFacebook, 'Lien url du compte Facebook:') }}
                                    {{ form_widget(form.lienFacebook) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s12">
                                    {{ form_label(form.lienLinkedin, 'Lien url du compte LinkedIn:') }}
                                    {{ form_widget(form.lienLinkedin) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s12">
                                    {{ form_label(form.email, 'Adresse mail:') }}
                                    {{ form_widget(form.email) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s12">
                                    <h3>Ajouter un nouveau média.</h3>
                                    <p>Dimensions recommandées : 300x300 px</p>
                                    <p>Utilisez le type de média "<b>image-cover</b>" pour afficher l'image
                                        d'un collaborateur.</p>
                                    {{ form_row(form.media) }}
                                </div>
                            </div>
                            <input class="waves-effect waves-light btn-large light-green" type="submit" value="Créer"/>
                            {{ form_widget(form._token) }}
                            {{ form_end(form) }}
                            <ul>
                                <li>
                                    <a href="{{ path('admin_collaborateur_index') }}"><i class="material-icons">keyboard_return</i>Retour
                                        à la liste des membres</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}
