{% extends '::layout_admin.html.twig' %}

{% block content %}

    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header light-green">
                            <h4 class="title">Modifier ce membre</h4>
                        </div>
                        <div class="card-content table-responsive">

                            {{ form_start(edit_form) }}
                            <div class="row">
                                <div class="col s1">
                                    {{ form_label(edit_form.tri, 'Tri :') }}
                                    {{ form_widget(edit_form.tri) }}
                                    {{ form_errors(edit_form.tri) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s12">
                                    {{ form_label(edit_form.nom, 'Nom:') }}
                                    {{ form_widget(edit_form.nom) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s12">
                                    {{ form_label(edit_form.prenom, 'Prénom:') }}
                                    {{ form_widget(edit_form.prenom) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s12">
                                    {{ form_label(edit_form.fonction, 'Fonction:') }}
                                    {{ form_widget(edit_form.fonction) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s12">
                                    {{ form_label(edit_form.bio, 'Biographie:') }}
                                    {{ form_widget(edit_form.bio, { 'attr': {'class':'areaDescription'}}) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s12">
                                    {{ form_label(edit_form.lienFacebook, 'Lien url du compte Facebook:') }}
                                    {{ form_widget(edit_form.lienFacebook) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s12">
                                    {{ form_label(edit_form.lienLinkedin, 'Lien url du compte LinkedIn:') }}
                                    {{ form_widget(edit_form.lienLinkedin) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s12">
                                    {{ form_label(edit_form.email, 'Adresse mail:') }}
                                    {{ form_widget(edit_form.email) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s12">
                                    <h3>Le média actuellement relié à votre collaborateur</h3>
                                    <p>Dimensions recommandées : 300x300 px</p>
                                    <p>Utilisez le type de média "<b>image-cover</b>" pour afficher l'image d'un
                                        collaborateur.</p>
                                    {{ form_row(edit_form.media) }}
                                </div>
                            </div>
                            <input class="waves-effect waves-light btn-large light-green" type="submit" value="Modifier"/>
                            {{ form_widget(edit_form._token) }}
                            {{ form_end(edit_form) }}
                            <ul>
                                <li>
                                    <a href="{{ path('admin_collaborateur_index') }}"><i
                                                class="material-icons">keyboard_return</i>Retour
                                        à la liste des membres</a>
                                </li>
                                <li>
                                    {{ form_start(delete_form) }}
                                    <input type="submit" value="Supprimer"
                                           class="waves-effect waves-light btn-large red pull-right">
                                    {{ form_end(delete_form) }}
                                </li>
                            </ul>
                        </div>

                    </div>


                </div>
            </div>
        </div>
    </div>

{% endblock %}