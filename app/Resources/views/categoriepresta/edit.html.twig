{% extends '::layout_admin.html.twig' %}

{% block content %}

    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header light-green">
                            <h4 class="title">Modifier la catégorie</h4>
                        </div>
                        <div class="card-content table-responsive">

                            {{ form_start(edit_form) }}
                            <div class="row">
                                <div class="col s12">
                                    {{ form_label(edit_form.nomCategorie, 'Nom de la catégorie:') }}
                                    {{ form_widget(edit_form.nomCategorie) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s6">
                                    {{ form_label(edit_form.flat, 'Appartement concerné:') }}
                                    {{ form_widget(edit_form.flat) }}
                                </div>
                                <div class="col s6">
                                    {{ form_label(edit_form.residence, 'Résidence liée:') }}
                                    {{ form_widget(edit_form.residence) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s6">
                                    <h4>L'icône actuellement rattaché à cette catégorie</h4>
                                    {% if categoriepresta.media.lien is defined %}

                                        <p><img class="responsive-img"
                                                src="{{ asset('uploads/'~categoriepresta.media.lien) }}"
                                                alt="{{ categoriepresta.nomCategorie }}"/>
                                            <a href="{{ path('categorie-presta_media_delete', {"id" : categoriepresta.id}) }}">Supprimer</a>
                                        </p>
                                    {% else %}
                                        <h3>Veuillez charger une nouvelle image.</h3>
                                        <p>N'oubliez pas de renseigner la page sur laquelle vous êtes ainsi que le type
                                            du
                                            media.</p>
                                        {{ form_widget(edit_form.media) }}
                                    {% endif %}
                                </div>
                            </div>
                            <input class="waves-effect waves-light btn-large light-green" type="submit"
                                   value="Modifier"/>
                            {{ form_widget(edit_form._token) }}
                            </form>
                            <ul>
                                <li>
                                    <a href="{{ path('admin_categorie-presta_index') }}"><i
                                                class="material-icons">keyboard_return</i>Retour
                                        à la liste des catégories</a>
                                </li>
                                <li>
                                    {{ form_start(delete_form) }}
                                    <input type="submit" value="Supprimer"
                                           class="waves-effect waves-light btn-large red pull-right">
                                    {{ form_end(delete_form) }}
                                </li>
                            </ul>
                        </div>

                    </div>


                </div>
            </div>
        </div>
    </div>

{% endblock %}