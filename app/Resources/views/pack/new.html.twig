{% extends '::layout_admin.html.twig' %}

{% block content %}

    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header light-green">
                            <h4 class="title"> Créer un nouveau pack</h4>
                        </div>
                        <div class="card-content table-responsive">

                            {{ form_start(form) }}
                            <div class="row">
                                <div class="col s12">
                                    {{ form_label(form.nom, 'Nom du pack:') }}
                                    {{ form_widget(form.nom) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s12">
                                    {{ form_label(form.description, 'Description du service :') }}
                                    {{ form_widget(form.description, { 'attr': {'class':'areaDescription'}}) }}
                                    {{ form_errors(form.description) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s12">
                                    {{ form_label(form.prix, 'Prix du pack:') }}
                                    {{ form_widget(form.prix) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s12">
                                    <h3>Ajouter une nouvelle image.</h3>
                                    <p>Utilisez le type de média "<b>image-cover</b>" pour afficher une image en couverture du
                                        pack et de l'illustrer.</p>
                                    {{ form_widget(form.media) }}
                                </div>
                            </div>
                            <input class="waves-effect waves-light btn-large light-green" type="submit" value="Créer"/>
                            {{ form_widget(form._token) }}
                            {{ form_end(form) }}

                            <ul>
                                <li>
                                    <a href="{{ path('admin_pack_index') }}"><i class="material-icons">keyboard_return</i>Retour à la liste des packs</a>
                                </li>
                            </ul>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
