{% extends '::layout_admin.html.twig' %}

{% block content %}

    <div class="content">
        <div class="container-fluid">
            <div class="row">

                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header light-green">
                            <h4 class="title">Pack : {{ pack.nom }}</h4>
                        </div>
                        <div class="card-content table-responsive">
                            <table class="table">
                                <tbody>
                                <tr>
                                    <th>Nom</th>
                                    <td>{{ pack.nom }}</td>
                                </tr>
                                <tr>
                                    <th>Description</th>
                                    <td>{{ pack.description }}</td>
                                </tr>
                                <tr>
                                    <th>Prix</th>
                                    <td>{{ pack.prix }}</td>
                                </tr>
                                </tbody>
                            </table>
                            <hr>
                            <div class="row">
                                <div class="col s4">
                                    <img class="responsive-img"
                                         src="{{ asset('uploads/'~pack.media.mediaName) }}"
                                         alt="{{ pack.nom }}"/>
                                    <p>{{ pack.media.typeMedia.nom }}</p>
                                </div>
                            </div>
                            <ul>
                                <li>
                                    <a href="{{ path('admin_pack_index') }}"><i class="material-icons">keyboard_return</i>Retour à la liste des packs</a>
                                </li>
                                <li>
                                    <a href="{{ path('admin_pack_edit', { 'id': pack.id }) }}"><i
                                                class="material-icons">build</i>Éditer ce pack</a>
                                </li>

                                <li>
                                    {{ form_start(delete_form) }}
                                    <input type="submit" value="Supprimer" class="waves-effect waves-light btn-large red pull-right">
                                    {{ form_end(delete_form) }}
                                </li>
                            </ul>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}
