{% extends '::layout_admin.html.twig' %}

{% block content %}

    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header light-green">
                            <h4 class="title">Modifier ce partenaire</h4>
                        </div>
                        <div class="card-content table-responsive">

                            {{ form_start(edit_form) }}
                            <div class="row">
                                <div class="col s12">
                                    {{ form_label(edit_form.nom, 'Nom du partenaire:') }}
                                    {{ form_widget(edit_form.nom) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s12">
                                    {{ form_label(edit_form.url, 'Url du site web:') }}
                                    {{ form_widget(edit_form.url) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s12">
                                    {% if partenaire.media.mediaName is defined %}

                                        <p class="imgUploader"><img class="responsive-img"
                                                                    src="{{ asset('uploads/'~partenaire.media.mediaName) }}"
                                                                    alt="{{ partenaire.nom }}"/>
                                            {% if asset('uploads/'~partenaire.media.mediaName) !=  asset('uploads/default.jpg') %}
                                                <a href="{{ path('partenaire_media_delete', {"id" : partenaire .id}) }}">Supprimer</a>
                                            {% endif %}
                                        </p>
                                    {% endif %}
                                    <h3>Ajouter une nouvelle image.</h3>
                                    <p>Utilisez le type de média "image-cover" pour afficher l'image d'un partenaire.</p>
                                    {{ form_widget(edit_form.media) }}
                                </div>
                            </div>
                            <input class="waves-effect waves-light btn-large light-green" type="submit" value="Modifier"/>
                            {{ form_widget(edit_form._token) }}
                            {{ form_end(edit_form) }}

                            <ul>
                                <li>
                                    <a href="{{ path('admin_partenaire_index') }}"><i class="material-icons">keyboard_return</i>Retour à la liste des partenaires</a>
                                </li>
                                <li>
                                    {{ form_start(delete_form) }}
                                    <input type="submit" value="Supprimer" class="waves-effect waves-light btn-large red pull-right">
                                    {{ form_end(delete_form) }}
                                </li>
                            </ul>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
