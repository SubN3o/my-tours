{% extends '::layout_admin.html.twig' %}

{% block content %}

    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header light-green">
                            <h4 class="title"> Créer un nouveau realisation</h4>
                        </div>
                        <div class="card-content table-responsive">

                            {{ form_start(form) }}
                            <div class="row">
                                <div class="col s1">
                                    {{ form_label(form.tri, 'Tri :') }}
                                    {{ form_widget(form.tri) }}
                                    {{ form_errors(form.tri) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s12">
                                    {{ form_label(form.nom, 'Nom de la réalisation:') }}
                                    {{ form_widget(form.nom) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s12">
                                    {{ form_label(form.ville, 'Ville') }}
                                    {{ form_widget(form.ville) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s12">
                                    <h3>Ajouter un nouveau média.</h3>
                                    <p>Utilisez le type de média "<b>image-cover</b>" pour afficher l'image d'une réalisation.</p>
                                    {{ form_row(form.media) }}
                                </div>
                            </div>
                            <input class="waves-effect waves-light btn-large light-green" type="submit" value="Créer"/>
                            {{ form_widget(form._token) }}
                            {{ form_end(form) }}

                            <ul>
                                <li>
                                    <a href="{{ path('admin_realisation_index') }}"><i class="material-icons">keyboard_return</i>Retour
                                        à la liste des réalisations</a>
                                </li>
                            </ul>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
