<footer>
    <!-- footer partie 1 -->
    <div class="footer1">
        <div class="row">
            <!--colonne gauche-->
            <div class="col s12 l4">
                <!-- information My ORLEANS -->
                <p class="titreFooter center">CONTACTEZ-NOUS</p>
                <div class="row contact">
                    <div class="col offset-l1 l11">
                        <div class="col s1"><i class="small material-icons align-icon right">phone</i></div>
                        <div class="col s11"><p class="linkFooter"><a href="tel:+33238759447">02 38 75 94 47</a></p></div>
                        <div class="col s1"><i class="small material-icons align-icon right">location_on</i></div>
                        <div class="col s11"><p class="linkFooter"><a href="https://goo.gl/maps/znYTm1bE8pz" target="_blank">13, rue Bannier<br>45000 Orléans</a></p></div>
                        <div class="col s1"><i class="small material-icons align-icon right">email</i></div>
                        <div class="col s11"><p class="linkFooter"><a href="mailto:contact@my-orleans.fr">contact@my-orleans.fr</a></p></div>
                    </div>
                </div>
                <!-- réseaux sociaux -->
                <p class="titreFooter center h5Footer">SUIVEZ-NOUS</p>
                <div class="row center">
                    <div class="col offset-l2 l2 s4">
                        <a href="https://www.facebook.com/myorleans/?ref=page_internal" target="_blank">
                                <i class="fa fa-facebook fa-3x fb-social social-btn"></i>
                        </a>
                    </div>
                    <div class="col offset-l1 l2 s4">
                        <a href="https://plus.google.com/+MYORLEANSOrl%C3%A9ans" target="_blank">
                                <i class="fa fa-google-plus fa-3x gplus-social social-btn"></i>
                        </a>
                    </div>
                    <div class="col offset-l1 l2 s4">
                        <a href="https://www.youtube.com/channel/UCFATFRMEwROsER_aiGX2OfQ/videos" target="_blank">
                                <i class="fa fa-youtube fa-3x ytb-social social-btn"></i>
                        </a>
                    </div>
                </div>
            </div>
            <!--colonne milieu-->
            <div class="col s12 l4">
                <p class="titreFooter center"><a href="{{ path("nosresidences") }}">NOS PROGRAMMES</a></p>
                <!-- affichage des 7 résidences -->
                <div class="row">
                    {% for programme in programmes %}
                        <div class="col s12">
                            <p class="linkFooter">
                                <a href="{{ path('nosresidences-search') }}?complete_search%5Bville%5D={{ programme.nom }}">{{ programme.nom }}</a>
                            </p>
                        </div>
                    {% endfor %}
                </div>
            </div>
            <!--colonne droite-->
            <div class="col s12 l4">
                <!-- liens internes vers MY-ORLEANS -->
                <p class="titreFooter center"><a href="{{ path("expertise") }}">EXPERTISE</a></p>
                <div class="row">
                    <div class="offset-l1 col l11">
                        {% for service in services %}
                            <p class="linkFooter"><a href="{{ path("expertise")~'#anchor-'~service.type }}">{{ service.type }}</a></p>
                        {% endfor %}
                    </div>
                </div>
                <p class="titreFooter center h5Footer"><a href="{{ path("immo_pratique") }}">INFOS PRATIQUES</a></p>
                <div class="row">
                    <div class="offset-l1 col l11">
                        {% for article in articles %}
                            <p class="linkFooter"><a href="{{ path('article', { 'slug': article.slug }) }}">{{ article.titre }}</a></p>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- footer partie 2 -->
    <div class="footer2">
        <div class="row">
            <!-- copyright -->
            <div class="col offset-l1 s12 l3">
                <p class="copyrightMyO">© 2017 My ORLEANS</p>
            </div>
            <div class="col s12 l4">
                <!-- Foire aux questions -->
                <span class="linkFooter col s12 l1 mentions"><a href="{{ path("faq") }}">Faq</a></span>
                <!-- informations légales -->
                <span class="linkFooter col s12 l5 mentions"><a href="#modalMention">Informations légales</a></span>
                <!-- frais et honoraires -->
                <span class="linkFooter col s12 l6 mentions"><a href="#modalHonoraire">Frais et honoraires de gestion</a></span>
            </div>
            <!-- labels FNAIM et Gallian -->
            <div class="col s12 l3">
                <div class="labels">
                    <a href="http://www.fnaim.fr/" target="_blank"><img src="{{ asset('img/logo-fnaim.png') }}"
                                                                        alt="FNAIM"
                                                                        class="logoFooter"></a>
                    <a href="https://www.galian.fr/" target="_blank"><img src="{{ asset('img/logo-galian.png') }}"
                                                                          alt="Galian" class="logoFooter"></a>
                </div>
            </div>
        </div>
        <!--modale informations légales-->
        <div id="modalMention" class="modal">
            <div class="modal-content">
                <a href="#" class="modal-action modal-close right"><i class="material-icons">close</i></a>
                {{ accueil.mentions | raw }}
            </div>
        </div>
        <!--modale honoraires-->
        <div id="modalHonoraire" class="modal">
            <a href="#" class="modal-action modal-close right"><i class="material-icons">close</i></a>
            <div class="modal-content">
                {% for media in accueil.medias if media.typeMedia.nom == 'image' %}
                    <img src="{{ asset('uploads/'~media.mediaName) }}" alt="honoraires">
                {% endfor %}
            </div>
        </div>
    </div>
</footer>