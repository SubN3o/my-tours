{% extends 'MyOrleansBundle::layout.html.twig' %}

{% block video %}
    <div class="container-fluid">
        <video width="100%" autoplay loop muted>
            <source src="{{ asset('video/MyOrleans.mp4') }}" type="video/mp4">
            <source src="{{ asset('video/MyOrleans.mp4') }}" type="video/ogg">
            <source src="{{ asset('video/MyOrleans.mp4') }}" type="video/webm">
        </video>
    </div>
{% endblock video %}

{% block content %}
    <h1>DÉCOUVREZ NOTRE SELECTION DE PROGRAMMES</h1>
    <div class="row">
        <div class="offset-s1 col s10 mosaic">
            <div class='colonne'>
                {% for residence in residenceCol1 %}
                    <div class="zone">
                    {% for media in residence.medias if media.typeMedia.nom == 'image-cover' %}
                        <img src="{{ asset('uploads/'~media.mediaName) }}">
                    {% endfor %}
                        <div class="contenu">
                            <p>{{ residence.nom }}</p>
                            {#<p>{{ residence.ville.nom }}</p>#}
                            <a href="#">VOIR PLUS</a>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <div class='colonne milieu'>
                {% for residence in residenceCol2 %}
                    <div class="zone">
                        {% for media in residence.medias if media.typeMedia.nom == 'image-cover' %}
                            <img src="{{ asset('uploads/'~media.mediaName) }}">
                        {% endfor %}
                        <div class="contenu">
                            <p>{{ residence.nom }}</p>
                            {#<p>{{ residence.ville.nom }}</p>#}
                            <a href="#">VOIR PLUS</a>
                        </div>
                    </div>
                {% endfor %}
                <div class="voir">
                    <a href="#"><p>VOIR PLUS DE PROGRAMMES</p></a>
                </div>
            </div>
            <div class='colonne'>
                {% for residence in residenceCol3 %}
                    <div class="zone">
                        {% for media in residence.medias if media.typeMedia.nom == 'image-cover' %}
                            <img src="{{ asset('uploads/'~media.mediaName) }}">
                        {% endfor %}
                        <div class="contenu">
                            <p>{{ residence.nom }}</p>
                            {#<p>{{ residence.ville.nom }}</p>#}
                            <a href="#">VOIR PLUS</a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

    <h1>NOTRE ÉQUIPE</h1>
    <div class="row">
        <div class="offset-s1 col s5">
            <img src="{{ asset('img/test/barillet.png') }}">
        </div>
    </div>
{% endblock content %}