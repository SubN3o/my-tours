{% extends 'MyOrleansBundle::layout.html.twig' %}

{% block content %}

<!--logo dde de documentation-->

<div class="breadcrumb">
    <a href="#" data-activates="slide-out" class="button-collapse"><i class="material-icons">message</i></a>
</div>
<!--fin logo dde de documentation-->


<!--premier block-->
<div class="container">

    <h2 class="subtitle fancy"><span>Nos services</span></h2>

    {% for service in services %}
        {% if service.id is odd %}
            <div class="row">
                <div class="col s12 m6 l6">
                    <div data-aos="fade-up-right">
                        <div class="boxi">
                            <h3>{{ service.type }}</h3>
                            <p>{{ service.description }}</p>
                            <div class="center">
                                <a href="#" data-activates="slide-out"
                                   class="button-collapse waves-effect waves-light btn"><i class="material-icons">message</i>
                                    Demander la documentation</a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col s12 m6 l6">
                    <div data-aos="fade-up-left">
                        {% for media in service.medias %}
                            {% if media.typeMedia.nom == 'image' %}


                                <img src="{{ asset('img/'~media.lien) }}" class="img-service responsive-img">

                            {% elseif media.typeMedia.nom == 'video' %}

                                <div class="video-container">
                                    <iframe width="560" height="315" src="{{ media.lien }}" frameborder="0"
                                            allowfullscreen></iframe>
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>
            </div>

        {% elseif service.id is even %}


            <div class="row">
                <div class="col s12 m6 l6">


                    <div data-aos="fade-up-right">
                        {% for media in service.medias %}
                            {% if media.typeMedia.nom == 'image' %}
                                <img src="{{ asset('img/'~media.lien) }}" class="img-service responsive-img">
                            {% elseif media.typeMedia.nom == 'video' %}
                                <div class="video-container">
                                    <iframe width="560" height="315" src="{{ media.lien }}" frameborder="0"
                                            allowfullscreen></iframe>
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>


                <div class="col s12 m6 l6">
                    <div data-aos="fade-up-left">
                        <div class="boxi">
                            <h3>{{ service.type }}</h3>
                            <p>{{ service.description }}</p>
                            <div class="center">
                                <a href="#" data-activates="slide-out"
                                   class="button-collapse waves-effect waves-light btn"><i class="material-icons">message</i>
                                    Demander la documentation</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        {% endif %}

    {% endfor %}

</div>
<!--fin premier container et fin block-->


<!-- debut container fluid deuxieme block -->
<!--les packs-->

<div class="bloc-color container-fluid">
    <div class="row">
        <div class="col offset-s1 s10">
            <h2 class="subtitle fancy"><span>Nos packs</span></h2>
            <div class="row">
                {% for pack in packs %}
                    <div class="col m6 s12 l4">
                        <div class="card">
                            <div class="card-image">
                                <div data-aos="flip-left">
                                    <img src="{{ asset('img/'~pack.media.lien) }}" class="img-pack">
                                    <span class="card-title">{{ pack.nom }}</span>
                                    <a class="btn-floating halfway-fab waves-effect waves-light light-green button-collapse"
                                       data-activates="slide-out" href="#"><i class="material-icons">message</i></a>
                                </div>
                                <div class="card-content">
                                    <p>{{ pack.description }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}


            </div>
        </div>
    </div>

</div>
<!-- fin container fluid deuxieme block -->
<!--fin packs-->


<!--fin troisième block-->
<div class="container">
    <!--quatrième block-->
    <div class="row">
        <h2 class="subtitle fancy"><span>Nos derniers témoignages</span></h2>

        {% for temoignage in temoignages %}
        {% if temoignage.id is odd %}

        <div class="col s12 m6 l6">
            <div data-aos="fade-up-right">

                <div class="boxi">
                    <h3>{{ temoignage.theme }}</h3>
                    <p>{{ temoignage.message }}</p>
                    <br/>
                    <p style="text-align: right">{{ temoignage.auteur }}</p>
                    <p style="text-align: right">{{ temoignage.date|date("m/d/y") }}</p>

                </div>
            </div>
            </div>

            {% elseif temoignage.id is even %}
            <div class="col s12 m6 l6">
                <div data-aos="fade-up-left">
                    <div class="boxi">
                        <h3>{{ temoignage.theme }}</h3>
                        <p>{{ temoignage.message }}</p>

                        <br/>
                        <p style="text-align: right">{{ temoignage.auteur }}</p>
                        <p style="text-align: right">{{ temoignage.date|date("m/d/y") }}</p>

                    </div>
                </div>
            </div>
            {% endif %}
            {% endfor %}


        </div>

    </div>
    <!-- Fin bloc Body-->


    <!-- Formulaire -->
    <form method="post" action="">
        <div id="slide-out" class="side-nav">
            <div class="userView">
                <h3 align="center">Contactez nous !</h3>
                <h4 align="center">02.38.75.94.47</h4>
                <div class="row">

                    {{ form(form) }}
                </div>


            </div>

        </div>
    </form>
    <!--fin formulaire-->

    {% endblock %}

    {% block javascripts %}

        {{ parent() }}
        <script type="text/javascript" src="{{ asset('js/aos.js') }}"></script>
        <script>
            AOS.init();
            $('.button-collapse').sideNav({
                    edge: 'right', // Choose the horizontal origin
                    draggable: false, // Choose whether you can drag to open on touch screens
                    closeOnClick: true
                }
            );
        </script>
    {% endblock %}


