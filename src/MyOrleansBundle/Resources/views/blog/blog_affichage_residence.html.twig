<div class="card large">
    <div class="card-image">
        {% if residence.medias is not empty %}
            {% for media in residence.medias if media.typeMedia.nom == 'image-cover' %}
                <img src="{{ asset('img/'~media.lien) | imagine_filter('thumb_residence') }}">
            {% endfor %}
        {% endif %}

    </div>
    <div class="card-content">
        <div class="row no-margin-bottom">
            <div class="col s8">
                <h4>{{ residence.nom }}</h4>
                <p>à {{ residence.ville.nom }}</p>
            </div>
            <div class="col s4 right-content">
                <h4>Prix</h4>
                {% if residence.affichagePrix %}
                    <p>Dès {{ prixMin }}€</p>
                {% else %}
                    <p>Nous contacter</p>
                {% endif %}
            </div>
        </div>
    </div>
    <div class="card-action center">
        <a href="{{ path('residences', { 'id': residence.id }) }}">Découvrir la résidence</a>
    </div>
</div>
