{% extends 'MyOrleansBundle::layout.html.twig' %}

{% block content %}
    <!-- Chiffres -->
    <div class="row center countRow">
        <div class="col s4">
            {% for chiffre in chiffres %}
                {% if loop.index == 1 %}
                    <span class="count countTitle">{{ chiffre.valeur }}</span>
                    <p class="chiffreNom">{{ chiffre.nom }}</p>
                {% endif %}
            {% endfor %}
        </div>
        <div class="col s4">
            {% for chiffre in chiffres %}
                {% if loop.index == 2 %}
                    <span class="count countTitle">{{ chiffre.valeur }}</span>
                    <p class="chiffreNom">{{ chiffre.nom }}</p>
                {% endif %}
            {% endfor %}
        </div>
        <div class="col s4 ">
            {% for chiffre in chiffres %}
                {% if loop.index == 3 %}
                    <span class="count countTitle">{{ chiffre.valeur }}</span>
                    <p class="chiffreNom">{{ chiffre.nom }}</p>
                {% endif %}
            {% endfor %}
        </div>
    </div>

    <!-- Search Complete -->
    <div class="row">
        <div class="offset-l1 col l4">

            <div class="card">
                {{ form_start(completeSearch) }}
                <div class="card-tabs">
                    <ul class="onglet tabs tabs-fixed-width">
                        <li class="tab"><a class="active" href="#localisation"><i class="material-icons medium">location_on</i><br>Localisation</a>
                        </li>
                        <li class="tab"><a href="#type"><i class="material-icons medium">dashboard</i><br>Type</a></li>
                        <li class="tab"><a href="#budget"><i class="material-icons medium">euro_symbol</i><br>Budget</a>
                        </li>
                    </ul>
                </div>
                <div class="search card-content center">
                    <div id="localisation">
                        <p>Où souhaitez-vous acheter ?</p>
                        <div class="row no-margin-bottom">
                            <div class="col s6">
                                {{ form_widget(completeSearch.ville) }}
                                {{ form_errors(completeSearch.ville) }}
                            </div>
                        </div>
                    </div>
                    <div id="type">
                        <p>Sélectionnez le type souhaité</p>
                        <div class="row no-margin-bottom">
                            <div class="col s12">
                                {{ form_widget(completeSearch.type) }}
                                {{ form_errors(completeSearch.type) }}
                            </div>
                        </div>
                    </div>
                    <div id="budget">
                        <p>Votre budget</p>
                        <div class="row no-margin-bottom">
                            <div class="col s6">
                                {{ form_widget(completeSearch.budgetMin) }}
                                {{ form_errors(completeSearch.budgetMin) }}
                            </div>
                            <div class="col s6">
                                {{ form_widget(completeSearch.budgetMax) }}
                                {{ form_errors(completeSearch.budgetMax) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-content">
                    <div class="col s6 center">
                        {{ form_widget(completeSearch.submit) }}
                    </div>
                </div>
                {{ form_end(completeSearch) }}
            </div>
        </div>
        <div class="col s7 hide-on-small-only carte">
            <div id="map"></div>
            <script>

                function initMap() {

                    var count = 0;
                    var locations = [
                        {% for residence in residences %}
                        ['{{ residence.nom }}', {{ residence.latitude }}, {{ residence.longitude }}],
                        {% endfor %}

                    ];

                    var map = new google.maps.Map(document.getElementById('map'), {
                        zoom: 12,
                        center: new google.maps.LatLng(47.902964, 1.909251),
                        mapTypeId: google.maps.MapTypeId.ROADMAP
                    });

                    var infowindow = new google.maps.InfoWindow();
                    var iconBase = 'img/';
                    var marker, i;

                    for (i = 0; i < locations.length; i++) {


                        marker = new google.maps.Marker({
                            position: new google.maps.LatLng(locations[i][1], locations[i][2]),
                            map: map,
                            icon: iconBase + 'marker.png'
                        });


                        google.maps.event.addListener(marker, 'click', (function (marker, i) {
                            return function () {
                                infowindow.setContent(locations[i][0]);
                                infowindow.open(map, marker);
                            }
                        })(marker, i));
                    }
                }

            </script>

            <script async defer
                    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyChaGGAaNFdi508AC8JBUs9rhjAOPNnyBU&callback=initMap">
            </script>

        </div>
    </div>
    {% dump(residences) %}
    <div class="row carte-liste-articles">

        <div class="offset-s1 col s10 liste-biens">

            <div class="row center no-margin-bottom">
                {% set nb_res = residences|length %}

                {% if rechercheSansResultat == 1 %}
                    <h1 class="section-title">
                        Aucune résidence ne correspond à votre recherche.<br/>Découvrez les biens suggérés.
                    </h1>
                {% else %}
                    <h1 class="section-title">
                        {% transchoice nb_res %}
                        {1} 1 résidence correspond à votre recherche|
                        ]1,Inf[ %count% résidences correspondent à votre recherche.
                        {% endtranschoice %}
                    </h1>
                {% endif %}
            </div>

            <div class="row">

                {% for residence in residences %}

                    {{ render(controller('MyOrleansBundle:VignetteResidence:affichageResidence', {'id': residence.id })) }}

                {% endfor %}

            </div>

            {% if suggestionActive == 1 and rechercheSansResultat == 0 %}
                <div class="row suggestion-biens">
                    {% set nb_res_suggerees = residencesSuggerees|length %}

                    {% transchoice nb_res_suggerees %}
                    {0} |
                    {1} <h1>D'autres biens pourraient vous intéresser dans cette résidence</h1>|
                    ]1,Inf[ <h1>D'autres biens pourraient vous intéresser dans ces résidences</h1>
                    {% endtranschoice %}
                </div>
                <div class="row">
                    {% for residence in residencesSuggerees %}
                            <div class="col s3">
                                <div class="card">
                                    <div class="card-image">
                                        <a href="{{ path('residences', { 'slug': residence.slug }) }}">
                                            {% if residence.medias is not empty %}
                                                {% for media in residence.medias if media.typeMedia.nom == 'image-cover' %}
                                                    <img src="{{ asset('uploads/'~media.mediaName) | imagine_filter('thumb_residence') }}" alt="residence">
                                                {% endfor %}
                                            {% endif %}
                                        </a>
                                    </div>
                                </div>
                            </div>
                    {% endfor %}
                </div>
            {% else %}

            {% endif %}

        </div>
    </div>


{% endblock content %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset("js/count.js") }}"></script>
    <script>

        $(document).ready(function () {

            $('#complete_search_quartier').autocomplete({
                data: {
                    {% for quartier in quartiers %}
                    "{{ quartier.nom }}": null,
                    {% endfor %}
                },
                limit: 20, // The max amount of results that can be shown at once. Default: Infinity.
                onAutocomplete: function (val) {
                    // Callback function when value is autcompleted.
                },
                minLength: 1 // The minimum length of the input for the autocomplete to start. Default: 1.

            });

            $('#complete_search_ville').autocomplete({
                data: {
                    {% for ville in villes %}
                    "{{ ville.nom }}": null,
                    {% endfor %}
                },
                limit: 20, // The max amount of results that can be shown at once. Default: Infinity.
                onAutocomplete: function (val) {
                    // Callback function when value is autcompleted.
                },
                minLength: 1 // The minimum length of the input for the autocomplete to start. Default: 1.

            });
        });

    </script>
{% endblock %}