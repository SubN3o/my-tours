                                    <a class="active" href="#">
                                        <img class="collaborateurBarillet circle"
                                             src="{{ asset('uploads/'~collaborateur.media.mediaName) | imagine_filter('thumb_collaborateur') }}"
                                             alt="photo de {{ collaborateur.prenom }} {{ collaborateur.nom }}">
                                    </a>
                                </li>
                            {% else %}
                                <li class="item"><a href="#">
