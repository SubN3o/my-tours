        $(document).ready(function () {
            $('.slider').slider({
                interval: 4000
            });
        });
    </script>
    <script type="text/javascript">
        $(document).ready(function () {
            // the "href" attribute of the modal trigger must specify the modal ID that wants to be triggered
            $('#modalEquipe').modal(
                {
                    dismissible: true,
                    complete: function () {
                        $("#modalEquipe video").attr("src", $("#modalEquipe video").attr("src"))
                    }

                });
        });
    </script>
{% endblock %}