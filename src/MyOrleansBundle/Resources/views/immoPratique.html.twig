{% extends 'MyOrleansBundle::layout.html.twig' %}

{% block title %}My-Orléans.com | Immo-Pratique{% endblock %}

{% block description %}
    <meta name="description" content="Description page Immo-Pratique"/>
{% endblock %}

{% block content %}
    <h1>Actualités et dossiers thematiques</h1>
    <div class="row">
        {{ form(articlesSearch) }}
    </div>
    <div class="row">
        {% for article in articles %}
            <a href="#">
                <div class="col offset-l1 l10 s12 article">
                        {% for media in article.medias if media.typeMedia.nom == "image-cover" %}
                            <img src="{{ asset('uploads/'~media.mediaName) }}"
                                 alt="illustration article {{ article.titre }}">
                        {% endfor %}
                        <div class="article-date">édité le : {{ article.date|date('d/m/Y') }}</div>
                        <h2>{{ article.titre }}</h2>
                        <div>{{ article.texte | truncate(200, true, '...') | raw }}</div>
                        {% for tag in article.tags %}
                            <p class="chip greenMyO">{{ tag.nom }}</p>
                        {% endfor %}
                </div>
            </a>
        {% endfor %}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}