{% extends 'MyOrleansBundle::layout.html.twig' %}

{% block content %}

    <!--logo dde de documentation-->
    <div class="breadcrumb">
        <a href="#" data-activates="slide-out" class="button-collapse pulse-button"><i class="material-icons">message</i></a>
    </div>
    <!--fin logo dde de documentation-->

    <!--grande image du haut-->
    <div class="header-image">
        <img src="{{ asset('img/living1.jpg') }}" style="width: 100%; margin-bottom: -100px;" alt="photo interieur appartement" />
    </div>
    <!--fin grande image du haut-->


        <!-- barre de recherche par mot clé-->
        <div class="barre-recherche">
            <nav class="recherche" style="border-radius: 25px">
                <div class="nav-wrapper">
                    <form>
                        <div class="input-field">
                            <input id="search" placeholder="Rechercher votre info par mot clé" type="search" required>
                            <label class="label-icon" for="search"><i class="material-icons">seach</i></label>
                            <i class="material-icons">close</i>
                        </div>
                    </form>
                </div>
            </nav>
        </div>
    <!--fin barre de recherche par mot clé-->

    <!--menu dossiers thematiques-->
    <div class="fiches-ancres">
        <div class="row bloc-color">
            <div class="col l12 ">
                <div class="row nav-immo-pratique center">
                    <div class="col s12 l4">
                        <a class="waves-effect waves-light btn" href="#conseils">Fiches conseils</a>
                    </div>
                    <div class="col s12 l4">
                        <a class="waves-effect waves-light btn" href="#thematiques">Dossiers thématiques</a>
                    </div>
                    <div class="col s12 l4">
                        <a class="waves-effect waves-light btn" href="#actu-immo">Actualités immobilières</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--fin menu dossier thématiques-->



    <!--premier block-->
<div class="container">

        <h2 class="subtitle fancy" id="conseils"><span>Nos fiches conseils</span></h2>

        {% for article in articles %}
        {% if article.id is odd %}
    <div class="row">
        <div class="col s12 m6 l6">
            <div data-aos="fade-up-right">
                <div class="boxi">
                    <h4>{{ article.titre }}</h4>
                    <p>{{ article.texte }}</p>
                    <div class="center">
                        <a class="waves-effect waves-light btn"><i class="material-icons left">print</i>Télécharger la fiche</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col s12 m6 l6">
            <div data-aos="fade-up-left">
                <img src="{{ asset('img/conseil3.jpg') }}" class="responsive-img" alt="image fiche conseil" />
            </div>
        </div>
    </div>



    {% elseif article.id is even  %}
    <div class="row">
        <div class="col s12 m6 l6">
            <div data-aos="fade-up-right">
                <img src="{{ asset('img/conseil4.jpg') }}" class="responsive-img" alt="image fiche conseil" />
            </div>
        </div>

        <div class="col s12 m6 l6">
            <div data-aos="fade-up-left">
                <div class="boxi">
                    <h4>{{ article.titre }}</h4>
                    <p>{{ article.texte }}</p>
                    <div class="center">
                        <a class="waves-effect waves-light btn"><i class="material-icons left">print</i>Télécharger la fiche</a>
                    </div>
                </div>
            </div>
        </div>

    </div>
        {% endif %}
        {% endfor %}
</div>
    <!--fin premier block-->





    <!-- deuxième block -->

<div class="container">
    {% for article in articles %}
    {% if article.id is odd %}
        <h2 class="subtitle fancy" id="thematiques"><span>Dossier thématiques</span></h2>
    <div class="row">
        <div class="col s12 m6 l6">
            <div data-aos="fade-up-right">
                            <div class="boxi">
                                <h4>{{ article.titre }}</h4>
                                <p>{{ article.texte }}</p>
                                <div class="center lien-article">
                                    <a href="#">LIRE LE DOSSIER</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col s12 m6 l6">
                        <div data-aos="fade-up-left">
                            <img src="{{ asset('img/conseil5.jpg') }}" class="responsive-img" alt="image fiche conseil" />
                        </div>
                    </div>
    </div>



                <div class="row">
                    {% elseif article.id is even  %}
                    <div class="col s12 m6 l6">
                        <div data-aos="fade-up-right">
                            <img src="{{ asset('img/conseil6.jpg') }}" class="responsive-img" alt="image fiche conseil" />
                        </div>
                    </div>

                    <div class="col s12 m6 l6">
                        <div data-aos="fade-up-left">
                            <div class="boxi">
                                <h4>{{ article.titre }}</h4>
                                <p>{{ article.texte }}</p>
                                <div class="center lien-article">
                                    <a href="#">LIRE LE DOSSIER</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
    {% endif %}
    {% endfor %}
            </div>
    <!--fin deuxième block-->






        <!--troisième block-->
    <div class="container">

     <h2 class="subtitle fancy" id="actu-immo"><span>Actualités immobilières</span></h2>
        {% for article in articles %}
        {% if article.id is odd %}
        <div class="row">
            <div class="col s12 m6 l6">
                <div data-aos="fade-up-right">
                    <div class="boxi">
                        <h4>{{ article.titre }}</h4>
                        <p>{{ article.texte }}</p>
                        <div class="center lien-article">
                            <a href="#">LIRE L'ARTICLE</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col s12 m6 l6">
                <div data-aos="fade-up-left">
                    <img src="{{ asset('img/conseil7.jpg') }}" class="responsive-img" alt="image fiche conseil"  />
                </div>
            </div>
        </div>


        <div class="row">
            {% elseif article.id is even  %}
            <div class="col s12 m6 l6">
                <div data-aos="fade-up-right">
                    <img src="{{ asset('img/conseil8.jpg') }}" class="responsive-img" alt="image fiche conseil" />
                </div>
            </div>

            <div class="col s12 m6 l6">
                <div data-aos="fade-up-left">
                    <div class="boxi">
                        <h4>{{ article.titre }}</h4>
                        <p>{{ article.texte }}</p>
                        <div class="center lien-article">
                            <a href="#">LIRE L'ARTICLE</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% endif %}
        {% endfor %}
    </div>

        <!--fin troisième block-->


    <!--formulaire de contact-->

    <form method="post" action="" >
        <div id="slide-out" class="side-nav">
            <div class="userView">
                <h3 align="center">Contactez nous !</h3>
                <h4 align="center">02.38.75.94.47</h4>

                <div class="row">
                    <div class="input-field col s6">
                        <i class="material-icons prefix">account_circle</i>
                        <input id="last_name" type="text" class="validate">
                        <label for="last_name">Nom</label>
                    </div>

                    <div class="input-field col s6">
                        <input id="last_name" type="text" class="validate">
                        <label for="first_name">Prénom</label>
                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s12">
                        <i class="material-icons prefix">phone</i>
                        <input id="icon_telephone" type="tel" class="validate">
                        <label for="icon_telephone">Téléphone</label>
                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s12">
                        <i class="material-icons prefix">email</i>
                        <input id="email" type="email" class="validate">
                        <label for="email" data-error="wrong" data-success="right">Email</label>
                    </div>
                </div>



                <div class="input-field col s12">
                    <i class="material-icons prefix">error</i>
                    <select>
                        <option value="" disabled selected>Objet?</option>
                        <option value="1">Gestion locative</option>
                        <option value="2">Vente</option>
                        <option value="3">Pack services</option>
                        <option value="4">Autres</option>
                    </select>

                </div>

                <div class="row">
                    <div class="input-field col s12">
                        <i class="material-icons prefix">mode_edit</i>
                        <textarea id="icon_prefix2" class="materialize-textarea"></textarea>
                        <label for="icon_prefix2">Votre message</label>
                    </div>
                </div>

                <div class="row">
                    <div class="col s12">
                        <button class="btn waves-effect waves-light btn-large center-align" type="submit" name="action">Envoyer
                            <i class="material-icons right">send</i>
                        </button>
                    </div>
                </div>
            </div>

        </div>
    </form>


    <!--fin formulaire de contact-->


    {% block javascripts %}

        {{ parent() }}
        <script type="text/javascript" src="{{ asset('js/aos.js') }}"></script>
        <script>
            AOS.init();
            $('.button-collapse').sideNav({
                    edge: 'right', // Choose the horizontal origin
                    draggable: false, // Choose whether you can drag to open on touch screens
                closeOnClick: true
                }

            );
        </script>
    {% endblock %}
{% endblock %}

