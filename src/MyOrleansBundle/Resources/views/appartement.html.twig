    <link rel="stylesheet" href="{{ asset('css/stylesheet.css') }}" media="screen,projection"/>
{% endblock %}

{% block content %}
    <div class="content-appartement">
        <div class="container-fluid">
            <div class="row center">
                <div class="col s12 l12 m10">
                    <h2 class="fancy"><span>Le Pryvé</span></h2>
                </div>
                <div class="col l6 s12">
                    <a href="#" class="demande-doc">Demander la documentation</a>
                </div>
            </div>
            <div class="row center">
                <div class="col s12 m6">
                    <div data-aos="fade-right">
                        <img src="{{ asset('img/apt-neuf.jpg') }}" class="photo-apt" alt="photo-appart"/>
                    </div>
                </div>
                <div class="col s12 m6">
                    <div data-aos="fade-left">
                        <div class="info-apt">
                            <h3>St Pryvé St Mesmin</h3>
                            <h3>Appartement Neuf</h3>
                            <h3>(Ref PRY13) Type2</h3>
                            <h3>37 m2</h3>
                            <h3>137 200 €</h3>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row center">
                <div class="col s12">
                    <img class="plan" src="{{ asset('img/plan.jpg') }}" alt="plan"/>
                </div>
            </div>

            <div class="row justify">
                <div class="col s12">
                    <img class="notation" src="{{ asset('img/notation.jpg') }}" alt="notation"/>
                </div>
                <div class="col l6 s12">
                    <h2>La Residence</h2>
