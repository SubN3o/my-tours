{% extends 'MyOrleansBundle::layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/stylesheet.css') }}" media="screen,projection"/>
    <link rel="stylesheet" href="{{ asset('css/style_accueil.css') }}" media="screen,projection"/>
{% endblock %}

{% block content %}
    <div id="content" class="content-appartement">
        <div class="container-fluid">
            <div class="row center">
                <div class="col s12 l12 m10">
                    <h2>

                        <span>{{ residence.nom }}</span>
                    </h2>
                </div>
                <div class="row">
                    <div class="col offset-l1 l5 s10">
                        <a class="waves-effect waves-light btn"><i class="material-icons left">message</i>Demander la
                            documentation</a>
                    </div>

                    <div id="editor" class="col offset-l1 l5 s10">

{#
                        <i id="cmd" class="material-icons print">print</i>
#}
                        <button id="cmd">generate PDF</button>
                    </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row center photoinfo-apt">
        <div class="col offset-l1 s10 m5">
            <div data-aos="fade-right">
                <img src="{{ asset('img/apt-neuf.jpg') }}" class="photo-apt" alt="photo-appart"/>
            </div>
        </div>
        <div data-aos="fade-left" class="col s10 m5">
            <div class="info-apt">
                <h3>{{ residence.ville }}</h3>

                <h3>Appartement Neuf</h3>

                <h3>({{ flat.reference }}) {{ flat.type }}</h3>
                <h3>{{ flat.surface }} m2</h3>
                <h3>{{ flat.prix }} €</h3>

            </div>
        </div>
    </div>
    <div class="row center">
        <div class="col s12">
            <img class="plan" src="{{ asset('img/plan.jpg') }}" alt="plan"/>
        </div>
    </div>
    <div class="row center">
        <div class="col s12">
            <img class="notation" src="{{ asset('img/notation.jpg') }}" alt="notation"/>
        </div>
    </div>
    <div class="row">
        <div class="col offset-l1 l10 center">
            <div class="row">
                <div class="col offset-l1 l5 s10">
                    <h3>La Residence</h3>
                    <p>
                        {{ residence.description }}
                    </p>
                </div>
                <div class="col l5 s10">
                    <h3>Les Prestations</h3>
                    <div class="row icon-left">
                        <div class="col offset-l1 l5">
                            <img class="icon-residence" src="{{ asset('img/icons/Wheelchair_Accessible.png') }}"
                                 alt="acces handicape"/>Accessibiité<br/>
                            <img class="icon-residence" src="{{ asset('img/icons/shopping-cart.png') }}"
                                 alt="commerces"/>Commerces<br/>
                        </div>
                        <div class="col l5">
                            <img class="icon-residence" src="{{ asset('img/icons/smoking_not_allowed.png') }}"
                                 alt="non fumeur"/>Non Fumeur<br/>
                            <img class="icon-residence" src="{{ asset('img/icons/finance.png') }}"
                                 alt="éligibilité loi pinel"/>Eligible Loi Pinel
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col s12 center">
                <h3>Les Détails de l'appartement</h3>
            </div>
            <div class="col offset-l1 s10">
                <div class="col l1 prestations">
                    <img class="icon-apt" src="{{ asset('img/icons/floor.png') }}" alt="revetement">
                </div>
                <div class="col l3 s5 prestations">
                    <p>Revetment Sol Salle de bains : Carrelage</p>
                    <p>Revetment Sol Chambre : Parquet</p>
                    <p>Revetment Séjour : Carrelage</p>
                </div>
                <div class="col l1 prestations">
                    <img class="icon-apt" src="{{ asset('img/icons/Parking.png') }}" alt="stationnement voiture">
                </div>
                <div class="col l3 s5 prestations">
                    <p>1 Parking en sous-sol et</p>
                    <p>1 Parking exterieur</p>
                </div>
                <div class="col l1 prestations">
                    <img class="icon-apt" src="{{ asset('img/icons/surface.png') }}" alt="surfaces">
                </div>
                <div class="col l3 s5 prestations">
                    <p>Surface Habitable : 38 m2</p>
                    <p>Surface Séjour : 19 m2</p>
                </div>
                <div class="col l1 prestations">
                    <img class="icon-apt" src="{{ asset('img/icons/agenda.png') }}" alt="date de livraison">
                </div>
                <div class="col l3 s5 prestations">
                    <p>livraison 2ème semestre 2017</p>
                </div>
                <div class="col l1 prestations">
                    <img class="icon-apt" src="{{ asset('img/icons/boussole.png') }}" alt="exposition séjour">
                </div>
                <div class="col l3 s5 prestations">
                    <p>Exposition du séjour : Nord Ouest</p>
                </div>
                <div class="col l1 prestations">
                    <img class="icon-apt" src="{{ asset('img/icons/chauffage.png') }}" alt="type de chauffage">
                </div>
                <div class="col l3 s5 prestations">
                    <p>Chauffage gaz collectif</p>
                </div>


                <div class="col l1 prestations">
                    <img class="icon-apt" src="{{ asset('img/icons/menuiserie.png') }}" alt="type de menuiseries">
                </div>
                <div class="col l3 s5 prestations">
                    <p>Menuiseries : PVC</p>
                </div>

                <div class="col l1 prestations">
                    <img class="icon-apt" src="{{ asset('img/icons/room.png') }}" alt="nombre de pièces">
                </div>
                <div class="col l3 s5 prestations">
                    <p>Nombre de Pièces : 2</p>
                </div>

            </div>
        </div>
    </div>
    <div>
        <a class="waves-effect waves-light btn"><i class="material-icons left">message</i>Demander la documentation</a>
    </div>


    {% block javascripts %}
        {{ parent() }}
        <script type="text/javascript" src="{{ asset('js/aos.js') }}"></script>
        <script>
            AOS.init();
        </script>
